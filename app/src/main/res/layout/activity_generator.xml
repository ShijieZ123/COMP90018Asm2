<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneratorActivity">

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/flGenerator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvGenerator"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:text="Generated QR Code will appear here"
            android:textAlignment="center"
            android:padding="4dp"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/ivGenerator"
            android:background="@color/white"
            />
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GenerateCodeBtn"
        android:text="Generate Code"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/flGenerator"
        />
        

</RelativeLayout>